<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" prefWidth="350" prefHeight="400" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.controller.RegisterController">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
    <Label text="Đăng ký tài khoản" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
    <TextField fx:id="usernameField" promptText="Tên đăng nhập" prefWidth="250" style="-fx-background-radius: 10; -fx-border-radius: 10;"/>
    <PasswordField fx:id="passwordField" promptText="Mật khẩu" prefWidth="250" style="-fx-background-radius: 10; -fx-border-radius: 10;"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Nhập lại mật khẩu" prefWidth="250" style="-fx-background-radius: 10; -fx-border-radius: 10;"/>
    <Button text="Đăng ký" onAction="#handleRegister" prefWidth="250" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"/>
    <Label fx:id="errorLabel" textFill="red" style="-fx-font-weight: bold;"/>
</VBox>
