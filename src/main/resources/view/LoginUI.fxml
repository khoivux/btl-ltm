<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<!--Stack Pane: dùng ghi đè, -->

<StackPane prefHeight="450" prefWidth="350" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.LoginController">
    <!-- Background Image with rounded corners -->
    <ImageView fx:id="backgroundImage" fitHeight="450" fitWidth="350" preserveRatio="false">
        <image>
            <Image url="@../assets/login_bg.png" />
        </image>
        <clip>
            <Rectangle arcHeight="30" arcWidth="30" height="450" width="350" />
        </clip>
    </ImageView>
    
    <!-- Login Form -->
    <AnchorPane prefHeight="450" prefWidth="350">
        <!-- TextField tên đăng nhập -->
        <TextField fx:id="usernameField" layoutX="37.0" layoutY="144.0" prefHeight="64" prefWidth="270.0" promptText="" style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.7); -fx-font-size: 24px; -fx-font-family: 'Comic Sans MS', 'Chalkboard SE', 'Bradley Hand', cursive; -fx-font-weight: bold;" AnchorPane.leftAnchor="37.0" AnchorPane.rightAnchor="43.0" AnchorPane.topAnchor="144.0" />

        <!-- PasswordField mật khẩu -->
        <PasswordField fx:id="passwordField" prefHeight="64" style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.7); -fx-font-size: 18px;" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="270" />

        <!-- Invisible Button overlay on OK button in background image -->
        <Button onAction="#handleLogin" opacity="0.1" prefHeight="50" prefWidth="100" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;" AnchorPane.leftAnchor="125" AnchorPane.rightAnchor="125" AnchorPane.topAnchor="380">
            <effect>
                <javafx.scene.effect.DropShadow />
            </effect>
        </Button>
        
        <!-- Error Label -->
        <Label fx:id="errorLabel" style="-fx-font-weight: bold; -fx-effect: dropshadow(gaussian, white, 1, 0.5, 0, 0);" textFill="red" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="320" />
    </AnchorPane>
</StackPane>
