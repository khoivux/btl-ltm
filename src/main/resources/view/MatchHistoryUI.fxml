<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="700.0" prefWidth="1100" styleClass="root" stylesheets="@../css/matchhistory.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.MatchHistoryController">
    <children>
        <Button fx:id="backButton" layoutX="30.0" layoutY="24.0" prefHeight="55.0" prefWidth="130.0" styleClass="logout-button" text="Quay lại" />

        <HBox alignment="CENTER" layoutY="130.0" prefHeight="70" prefWidth="1200">
            <children>
                <Label styleClass="history-button" text="LỊCH SỬ THI ĐẤU" />
            </children>
        </HBox>

        <HBox alignment="CENTER" layoutY="190" prefHeight="47.0" prefWidth="1200.0">
            <children>
                <Label fx:id="eloLabel" styleClass="elo-label" text="ELO: 1520 điểm" />
            </children>
        </HBox>

        <TableView fx:id="matchTable" styleClass="match-table"
                   AnchorPane.leftAnchor="90"
                   AnchorPane.rightAnchor="90"
                   AnchorPane.bottomAnchor="20.0"
                   AnchorPane.topAnchor="230.0">

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>

            <columns>
                <TableColumn fx:id="colOpponent" prefWidth="200.0" text="Tên đối thủ" />
                <TableColumn fx:id="colResult" prefWidth="150.0" text="Kết quả" />
                <TableColumn fx:id="colRatio" prefWidth="120.0" text="Tỉ số" />
                <TableColumn fx:id="colStartTime" prefWidth="250.0" text="Thời gian bắt đầu" />
                <TableColumn fx:id="colEndTime" prefWidth="250.0" text="Thời gian kết thúc" />
            </columns>
        </TableView>
    </children>
</AnchorPane>