<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.controller.MatchHistoryController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom, #0a0f1a, #1b2233);">

    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-background-color: #ff4655; -fx-padding: 10 20;">
            <Button fx:id="backButton"
                    text="← Quay lại"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;" />
            <Label text="LỊCH SỬ THI ĐẤU"
                   style="-fx-text-fill: white;
                          -fx-font-size: 18px;
                          -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">

            <VBox alignment="CENTER" spacing="10">

                <Label fx:id="eloLabel"
                       text="ELO: 1520 điểm"
                       style="-fx-text-fill: #cccccc;
                              -fx-font-size: 14px;" />
            </VBox>

            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                <content>
                    <VBox fx:id="matchListBox"
                          spacing="10"
                          prefWidth="800"
                          alignment="TOP_CENTER"
                          style="-fx-padding: 10; -fx-background-color: transparent;">

                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>

