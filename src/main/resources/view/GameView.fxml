<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.GameController">

    <top>
        <HBox spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label text="Player 1: " fx:id="lblPlayer1"/>
            <Label text="0" fx:id="scorePlayer1"/>
            <Label text="Player 2: " fx:id="lblPlayer2"/>
            <Label text="0" fx:id="scorePlayer2"/>
            <Label text="Thời gian: "/>
            <Label text="15" fx:id="timerLabel"/>
        </HBox>
    </top>

    <center>
        <GridPane fx:id="boardGrid" hgap="10" vgap="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Button text="Kết thúc" onAction="#endGame"/>
        </HBox>
    </bottom>

</BorderPane>
