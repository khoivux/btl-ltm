<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.MainController">

    <!-- Bên trái: các nút chức năng -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="296.0" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Button fx:id="btnHistory" text="Xem lịch sử thi đấu" />
            <Button fx:id="btnRanking" text="Xem bảng xếp hạng" />
            <Button fx:id="btnEditInfo" text="Chỉnh sửa thông tin" />
            <Button onAction="#handleLogout" text="Đăng xuất" />
        </VBox>
    </left>

    <!-- Bên phải: bảng danh sách user online -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <TableView fx:id="userTable" prefHeight="561.0" prefWidth="564.0">
                <columns>
                    <TableColumn fx:id="colUsername" prefWidth="250.0" text="Tên người dùng" />
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
