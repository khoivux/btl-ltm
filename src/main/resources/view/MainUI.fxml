<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@../css/lobby.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.MainController">

    <children>

        <!-- ===== Nút chức năng phía trên ===== -->
        <HBox layoutX="337.0" layoutY="150.0" spacing="40">
            <children>
                <Button fx:id="btnHistory" styleClass="history-button" text="Lịch sử đấu" />
                <Button fx:id="btnRanking" onAction="#handleLeaderboard" styleClass="ranking-button" text="Bảng xếp hạng" />
                <Button fx:id="btnLogout" onAction="#handleLogout" styleClass="logout-button" text="Đăng xuất" />
            </children>
        </HBox>

        <!-- ===== Phần chính: Chat + Danh sách người chơi ===== -->
        <HBox alignment="CENTER" layoutX="150.0" layoutY="250.0" spacing="80">
            <children>

                <!-- Khung chat -->
                <AnchorPane prefHeight="370.0" prefWidth="400.0" styleClass="chat-container">
                    <children>
                        <Label layoutX="130.0" layoutY="10.0" styleClass="chat-title" text="General Chat" />

                        <ListView fx:id="listChats" layoutX="25.0" layoutY="50.0" prefHeight="260.0" prefWidth="350.0" styleClass="chat-list" />

                        <TextField fx:id="addedChat" layoutX="25.0" layoutY="317.0" onAction="#handleAddChat" prefHeight="35.0" prefWidth="260.0" promptText="Nhập tin nhắn..." styleClass="chat-input" />

                        <Button fx:id="sendButton" layoutX="300.0" layoutY="317.0" onAction="#handleAddChat" prefHeight="35.0" prefWidth="63.0" styleClass="send-button" text="Gửi" />
                    </children>
                </AnchorPane>

                <!-- Danh sách người chơi -->
                <VBox alignment="TOP_CENTER" prefHeight="370.0" prefWidth="400.0" spacing="10" styleClass="player-list-container">
                    <children>
                        <Label alignment="CENTER" prefWidth="380.0" styleClass="player-list-title" text="Danh sách người chơi" />
                        <TableView fx:id="userTable" prefHeight="300.0" prefWidth="360.0" styleClass="player-table">
                            <columns>
                                <TableColumn fx:id="colUsername" prefWidth="180.0" text="Người chơi" />
                                <TableColumn fx:id="colStatus" prefWidth="180.0" text="Trạng thái" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

            </children>
        </HBox>

    </children>
</AnchorPane>
